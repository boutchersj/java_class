package projectOne;

public class ProjectOne {

	public static void main(String[] args) {
		double sum = 0;
		for (int i = 1; i <= 97; i += 2) {
			sum = sum + (i*1.0/(i+2));
			System.out.println("i = " + i + " " + "sum += " + (i*1.0/(i+2)));
			
		}
		System.out.print("sum = " + sum);
	}
}

